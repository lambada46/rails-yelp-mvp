<h1>New Review - <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.select :rating, [0, 1, 2, 3, 4, 5 ], {}, class: 'form-control'%>

    <%= f.input :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<%end%>
